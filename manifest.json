{
    "name": "Mirrativ Comment Downloader",
    "version": "1.0",
    "description": "Download comments for a Mirrative live as a .txt file",
    "permissions": [
        "tabs",
        "webNavigation",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.mirrativ.com/broadcast/*"],
            "all_frames": true,
            "js": ["contentScript.js"],
            "run_at": "document_end"
        }
    ],
    "icons": { 
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png" },
    "manifest_version": 2
  }